<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vssv.dotsanddashes">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Dots And Dashes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name=".GameFinish"
            android:label=""
            android:theme="@style/DialogAppTheme"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".quitactivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlayerSetup"
            android:label=""
            android:theme="@style/DialogAppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OptionsMenuAdvanced"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/DialogAppTheme"/>
        <activity
            android:name=".OptionsMenu"
            android:label=""
            android:theme="@style/DialogAppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Menu"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>